<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/basketCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            tool:visibility="visible"
            android:id="@+id/basketItem_discount_view"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="#EC1C24">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <View
                    android:layout_width="10dp"
                    android:background="#EC1C24"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/basketItem_discount_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#EC1C24"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="-percent%" />
                <View
                    android:layout_width="10dp"
                    android:background="#EC1C24"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/basketImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:maxHeight="100dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_restaurant" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="-20dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/basketItemTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textSize="15dp"
                            android:text="Продукты" />
                        <ImageButton
                            android:id="@+id/exitBasketImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="#14ffffff"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/ic_baseline_close_24" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal">
                        <ImageButton
                            android:id="@+id/leftBasketImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="#14ffffff"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/ic_baseline_arrow_left_24">
                        </ImageButton>
                        <TextView
                            android:id="@+id/quantityTextView"
                            android:layout_width="match_parent"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textStyle="bold"

                            android:text="0" />
                        <ImageButton
                            android:id="@+id/rightBasketImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="#14ffffff"
                            android:layout_marginBottom="15dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/ic_baseline_arrow_right_24">
                        </ImageButton>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="15dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/basketItemPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="15dp"
                                android:gravity="right"
                                android:text="Цена" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:text=" ₴"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>