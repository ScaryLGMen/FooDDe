<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/prom_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/prom_item_background"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/restaurant" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/prom_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:maxWidth="200dp"
                    android:text="Название"
                    android:textColor="#433324"
                    android:textSize="@dimen/gmts_text_margin_horiz" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardCornerRadius="16dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:text="Осталось"
                        android:textSize="10dp"
                        android:textColor="#433324"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/prom_item_time"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textColor="#433324"
                        android:text="0"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:textColor="#433324"
                        android:text="дней"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>